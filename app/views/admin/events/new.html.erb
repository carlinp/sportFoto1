<h1>New event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :banner %><br />
    <%= f.text_field :banner %>
  </p>
  <p>
    <%= f.label :gps %><br />
    <%= f.text_field :gps %>
  </p>
  <p>
    <%= f.label :fingerprint %><br />
    <%= f.text_field :fingerprint %>
  </p>
  <p>
    <%= f.label :event_start %><br />
    <%= f.datetime_select :event_start %>
  </p>
  <p>
    <%= f.label :event_end %><br />
    <%= f.datetime_select :event_end %>
  </p>
  <p>
    <%= f.label :event_type_id %><br />
    <%= f.text_field :event_type_id %>
  </p>
  <p>
    <%= f.label :is_approved %><br />
    <%= f.check_box :is_approved %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', admin_events_path %>